<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeBetter" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BeBetter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.BeBetter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BeBetter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="InputBoxStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:background">@drawable/border_input_box</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@drawable/memo_edit_selector</item>
    </style>

    <style name="NoTitle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ItemCard">
<!--        <item name="cardElevation">10dp</item>-->
        <item name="android:layout_margin">2dp</item>
<!--        <item name="android:layout_marginLeft">5dp</item>-->
<!--        <item name="android:layout_marginRight">5dp</item>-->
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="background">@drawable/item_card_bg</item>
    </style>

    <!--themes.xml | styles.xml-->
    <style name="pw_bottom_anim_style">
        <item name="android:windowEnterAnimation">@anim/pw_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/pw_bottom_out</item>
    </style>


    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/purple_500</item>
        <item name="colorControlActivated">@color/purple_500</item>
    </style>

</resources>