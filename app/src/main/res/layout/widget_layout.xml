<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/widget_style"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:padding="0dp"
            android:orientation="vertical">
           <LinearLayout
               android:id="@+id/widget_layout_left"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingBottom="60dp"
               android:orientation="vertical">
               <TextView
                   android:layout_marginTop="15dp"
                   android:id="@+id/appwidget_weekday"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="周二"
                   android:textSize="12sp"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   />
               <TextView
                   android:id="@+id/appwidget_date"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="01"
                   android:textSize="33sp"
                   android:textColor="@color/black"
                   />
           </LinearLayout>
            <Button
                android:id="@+id/appwidget_add_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:maxHeight="35dp"
                android:maxWidth="35dp"
                android:background="@drawable/widget_add_button"
                android:text="+"
                android:textColor="@color/blank"
                android:textSize="20sp"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/widget_layout_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部待办"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/widget_memos_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="160dp"
                    android:background="@drawable/widget_memos_count"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="#0b57f4"
                    android:textSize="10sp" />
            </LinearLayout>
            <ListView
                android:id="@+id/appwidget_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>