<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/memoSortEditPopWindowTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                android:text="新建分类"
                android:textSize="22sp"
                android:textFontWeight="600"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/memoSortEditPopWindowColorRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/memoSortEditPopWindowRadioButton1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:buttonTint="@color/sort_color_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/memoSortEditPopWindowRadioButton2"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:buttonTint="@color/sort_color_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/memoSortEditPopWindowRadioButton3"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:buttonTint="@color/sort_color_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/memoSortEditPopWindowRadioButton4"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:buttonTint="@color/sort_color_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/memoSortEditPopWindowRadioButton5"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:buttonTint="@color/sort_color_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/memoSortEditPopWindowRadioButton6"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:buttonTint="@color/sort_color_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/memoSortEditPopWindowRadioButton7"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:buttonTint="@color/sort_color_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/memoSortEditPopWindowRadioButton8"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:buttonTint="@color/sort_color_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RadioGroup>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/sort_input"
                android:backgroundTint="@color/sort_input">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/addMemoSortIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_sort_note_22dp"/>
                    <EditText
                        android:id="@+id/sortName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:hint=" 名称"
                        android:paddingStart="10dp"
                        android:shadowColor="@color/divider"
                        android:background="@null"
                        android:textSize="18sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/addMemoSortCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:text="取消"
                    android:textColor="@color/blue"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:background="#EEEFFF"
                    android:layout_marginStart="65dp"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/addMemoSortSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:text="保存"
                    android:textColor="@color/blue"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>